
@{
    ViewBag.Title = "MostrarPedidos";
    Layout = "~/Views/Shared/_Layout.cshtml";
    List<MVC_Charming.Models.Producto>listax = ViewBag.Loquequiera;
    List<MVC_Charming.Models.HistorialPedido> HistorialP = ViewBag.Historial;
    MVC_Charming.Models.Usuario usu = ViewBag.Usu;
}


    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.bundle.min.js" integrity="sha384-JEW9xMcG8R+pH31jmWH6WWP0WintQrMb4s7ZOdauHnUtxwoG2vI5DkLtS3qm9Ekf" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.min.js" integrity="sha384-j0CNLUeiqtyaRmlzUHCPZ+Gy5fQu0dQ6eZ/xAww941Ai1SxSY+0EQqNXNE6DZiVc" crossorigin="anonymous"></script>
    <link href="~/Css/CssHistorialPedidos.css" rel="stylesheet" />
    <script src="~/Scripts/SliderProduct.js"></script>


    <div id="container">


        <div class="part-lateral">
            <p class="micuenta">Mi cuenta</p>
            <hr />
          <p style="margin-bottom: 15px;"> <a href="~/User/UsersSection" class="buttons">Datos personales</a></p>  
            <input id="Button1" type="button" value="Direccion" class="buttons" />
            <input id="Button1" type="button" value="Metodos de pago" class="buttons" />
            <a href="~/User/MostrarPedidos" class="buttons"> Historial de pedidos</a>


            <p class="help">¿NECESITAS AYUDA?</p>
            <hr />
            <p class="help-item">
                <a href="NotFound.aspx">Formas de pago</a>
            </p>



            <p class="help-item">
                <a href="NotFound.aspx">Cambio o reembolsos</a>
            </p>
            <p class="help-item">
                <a href="NotFound.aspx">Terminos y condiciones</a>
            </p>
            <p class="help-item">
                <a href="NotFound.aspx">Politicas de privacidad</a>
            </p>

            <p class="help-item">
                <a href="NotFound.aspx">Atencion al cliente</a>
            </p>


        </div>


        <div class="cont-title">

            <p class="holausu">
                Historial de pedidos

            </p>

            <p class="noeresusu">
                ¿No eres  @usu.NombreU?

            </p>
            @*<a id="Button1" type="button" value="Cerrar Sesion" class="buttoncerrar" />*@
            <a class="buttoncerrar" href="@Url.Action("CloseSession","User")">
                Cerrar Sesion
            </a>

            <hr />
        </div>


        <div class="cont-info">
        
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th class="titulotable" scope="col">#NumPedido</th>
                            <th class="titulotable" scope="col">Fecha</th>
                            <th class="titulotable" scope="col">Nombre</th>
                            <th class="titulotable" scope="col">Producto</th>
                            <th class="titulotable" scope="col">Talla</th>
                            <th class="titulotable" scope="col">Total</th>
                            <th class="titulotable" scope="col">Tipo</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var Hist in HistorialP)
                        {
                        <tr>
                            <th class="controw" scope="row">PED232-@Hist.IDVenta</th>
                            <td class="contenidot">@Hist.Fecha</td>
                            <td class="contenidot">@Hist.Nombre</td>
                            <td class="contenidot">@Hist.NombreProducto</td>
                            <td class="contenidot">@Hist.talla</td>
                            <td class="contenidot">@Hist.Total</td>
                            <td class="contenidot">@Hist.Tipo</td>
                        </tr>
                        }
                        </tbody>

                </table>
       
            </div>


        <div id="carouselExampleFade" class="carousel slide carousel-fade" data-bs-ride="carousel">
            <div class="carousel-indicators">
                <button type="button" data-bs-target="#carouselExampleFade" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
                <button type="button" data-bs-target="#carouselExampleFade" data-bs-slide-to="1" aria-label="Slide 2"></button>
                <button type="button" data-bs-target="#carouselExampleFade" data-bs-slide-to="2" aria-label="Slide 3"></button>
                <button type="button" data-bs-target="#carouselExampleFade" data-bs-slide-to="3" aria-label="Slide 3"></button>
            </div>
            <div class="carousel-inner">
                <div class="carousel-item active">

                    <img src="~/Imagen/CarruselUsuarios/carruselusuh.jpg" class="d-block w-100" />
                </div>
                <div class="carousel-item">
                    <img src="~/Imagen/CarruselUsuarios/carruselusuh2.jpg" class="d-block w-100" />
                </div>
                <div class="carousel-item">
                    <img src="~/Imagen/CarruselUsuarios/carruselusum.jpg" class="d-block w-100" />
                </div>
                <div class="carousel-item">
                    <img src="~/Imagen/CarruselUsuarios/carruselusum2.jpg" class="d-block w-100" />
                </div>
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleFade" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleFade" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
        </div>

        <div class="Carousel">

            <div class="slick-list" id="slick-list">
                <input type="button" class="slick-arrow slick-prev" id="button-prev" data-button="button-prev" onclick="app.processingButton(event)" />

                <div class="slick-track" id="track">

                    @foreach (var producto in listax)
                    {
                        <div class="slick">
                            <div>
                                <a href="@Url.Action("ObservarProducto","Look", new { CODPROD=producto.CodProduct} )">
                                    <div class="refeimg">
                                        <img src="~/Imagen/Productos/@producto.ImagenProducto" class="refeimg" />
                                    </div>
                                </a>
                            </div>
                        </div>
                    }
                </div>
                <input type="button" class="slick-arrow slick-next" id="button-next" data-button="button-next" onclick="app.processingButton(event)">
            </div>
        </div>





    </div>
